<!DOCTYPE html>
<html ng-app="documentsApp">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/ui-grid.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <style>
        body {
            padding-top: 60px;
            padding-bottom: 40px;
        }

        .gridStyle {
            border: 1px solid rgb(212,212,212);
            width: 400px;
            height: 300px;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" data-ng-controller="NavbarController">
        <div class="navbar-inner">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#/home">Documents</a>
                </div>

                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="#/folder">Folders</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    @RenderBody()

    <script src="~/Scripts/dependencies/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/dependencies/bootstrap.js"></script>
    <script src="~/Scripts/dependencies/angular.js"></script>
    <script src="~/Scripts/dependencies/angular-route.min.js"></script>
    <script src="~/Scripts/dependencies/ui-grid.js"></script>
    <script src="~/Scripts/dependencies/angular-file-upload.js"></script>
    <script src="~/Scripts/dependencies/ui-bootstrap-tpls-0.12.1.js"></script>
    
    <script src="~/Scripts/app/documentsApp.js"></script>
    <script src="~/Scripts/services/documentService.js"></script>
    <script src="~/Scripts/app/controller/folderController.js"></script>
    <script src="~/Scripts/app/controller/homeController.js"></script>
    <script src="~/Scripts/app/controller/navbarController.js"></script>
    <script src="~/Scripts/app/controller/modalFileController.js"></script>
    <script src="~/Scripts/app/controller/modalFolderController.js"></script>
</body>
</html>
